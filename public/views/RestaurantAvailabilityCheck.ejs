<!DOCTYPE html>
<html>
  <head>
    <!-- BOOTSTRAP -->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css"
      integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T"
      crossorigin="anonymous"
    />
    <script src="https://code.jquery.com/jquery-3.6.3.min.js"></script>

    <!-- FONT AWESOME -->
    <link
      rel="stylesheet"
      href="https://use.fontawesome.com/releases/v5.15.1/css/all.css"
    />

    <!-- CUSTOM CSS -->
    <link rel="stylesheet" href="../css/RestaurantAvailabilityCheck.css" />

    <!-- CUSTOM JS -->
    <script src="../js/RestaurantAvailabilityCheck.js"></script>
  </head>
  <body>
    <%- include('./common/nav') %>
    <div class="container">
      <table class="table table-bordered" id="restCheckTable">
        <thead>
          <tr>
            <th>Feed Quantity</th>
            <th>Food Choice</th>
            <th>Point of Contact (P.O.C.)</th>
            <th>Location</th>
          </tr>
        </thead>
        <tbody>
          <div id="foodTable"></div>
          <% foodData.forEach(function(item) { %>
          <tr>
            <td><%= item.Quantity %></td>
            <td><%= item.type %></td>
            <td><%= item.name %></td>
            <td><%= item.Location %></td>
          </tr>
          <% });%>
        </tbody>
      </table>
    </div>
  </body>
</html>
