<body>
  <!-- Calling Nav bar from Views/Common/nav.ejs -->
  <%- include('./common/nav') %>
  
<!-- Space -->â€‹
  <!-- Displaying the data from updatefooddatas database in card format with delete option -->
  <div class="card-deck">
    <% Fooddata.forEach(UpdateFoodData => { %>
      <div class="card">
        <div class="card-body">
          <h5 class="card-title"><%= UpdateFoodData.name %></h5>
          <p class="card-text">
            ID: <%= UpdateFoodData._id %><br>
            Contact: <%= UpdateFoodData.contact %><br>
            Food Type: <%= UpdateFoodData.type %><br>
            Quantity: <%= UpdateFoodData.Quantity %><br>
            Location: <%= UpdateFoodData.Location %><br>
          </p>
          <form action="/delete/<%= UpdateFoodData._id %>" method="post">
            <button type='submit' class="btn btn-danger">Delete</button>
            </form> 
          </div>
      </div>
    <% }); %>
  </div>
</body>
</html>